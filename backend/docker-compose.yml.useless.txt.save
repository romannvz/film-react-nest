version: '3.9'

services:
  backend:
    build:
      context: .
      dockerfile: Dockerfile
    container_name: film_backend
    restart: always
    ports:
      - "3001:3000"
    depends_on:
      - postgres
    env_file:
      - .env
    networks:
      - filmnet

  postgres:
    image: postgres:15-alpine
    container_name: film_postgres
    restart: always
    ports:
      - "5432:5432"
    volumes:
      - pg_data:/var/lib/postgresql/data
    env_file:
      - .env
    networks:
      - filmnet

  pgadmin:
    image: dpage/pgadmin4
    container_name: film_pgadmin
    restart: always    ports:
      - "8081:80"
    env_file:
      - .env
    volumes:
      - pgadmin_data:/var/lib/pgadmin
    networks:
      - filmnet

volumes:
  pg_data:
  pgadmin_data:

networks:
  filmnet:
